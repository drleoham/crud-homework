<%= stylesheet_link_tag "home.scss" %>

<div class="container">
  <div class="row">
    <h1>글 수정하기</h1><br>
    <form action="/post/<%= @post.id %>/update" id="contact" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">제목</label>
        <input type="text" name="title" class="form-control" id="exampleInputEmail1" value="<%= @post.title %>">
      </div>
      <div class="form-group">
        <label for="textarea">내용</label>
        <textarea class="form-control" id="textarea" name="content" rows="4"><%= @post.content %></textarea><br>
      </div>
      <button type="submit" class="btn btn-default">게시하기</button><br>
    </form><br>
  </div>
</div>
